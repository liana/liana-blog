{
  "name": "liana-blog",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf _site",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:tailwind": "npx tailwindcss -i ./src/assets/css/tailwind.css -o ./_site/assets/css/styles.css --watch",
    "dev": "npm-run-all clean --parallel dev:*",
    "build:eleventy": "eleventy",
    "build:tailwind": "NODE_ENV=production npx tailwindcss -i ./src/assets/css/tailwind.css -o ./_site/assets/css/styles.css --minify",
    "build": "npm-run-all clean build:*"
  },
  "keywords": [
    "blog",
    "11ty",
    "tailwind",
    "static-site"
  ],
  "author": "Liana Leahy",
  "license": "ISC",
  "description": "Lyrics & Logic - A modern static blog built with 11ty and Tailwind CSS",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}

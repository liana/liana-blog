---
layout: layouts/base.njk
title: Product Management
pagination:
  data: collections.posts
  size: 10
  alias: posts
  filter:
    - Product Management
permalink: "/category/product-management/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<div class="max-w-5xl mx-auto px-4 py-12">
  <div class="mb-8">
    <h1 class="text-4xl md:text-5xl font-bold text-brand-teal mb-4">Product Management</h1>
    <p class="text-xl text-gray-600">Insights on product strategy, user research, and cross-functional leadership</p>
  </div>

  {% set filteredPosts = collections.posts | selectattr("data.categories", "defined") | list %}
  {% set categoryPosts = [] %}
  {% for post in filteredPosts %}
    {% if "Product Management" in post.data.categories %}
      {% set categoryPosts = (categoryPosts.push(post), categoryPosts) %}
    {% endif %}
  {% endfor %}

  {% if categoryPosts.length > 0 %}
    <div class="space-y-8">
      {% for post in categoryPosts %}
        {% include "components/post-card.njk" %}
      {% endfor %}
    </div>

    {% if pagination.href.next or pagination.href.previous %}
      <nav class="flex justify-center gap-4 mt-12" aria-label="Pagination">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" class="btn-secondary">← Newer Posts</a>
        {% endif %}
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" class="btn-secondary">Older Posts →</a>
        {% endif %}
      </nav>
    {% endif %}
  {% else %}
    <p class="text-gray-600 text-lg">No posts in this category yet.</p>
  {% endif %}
</div>

<header class="bg-brand-bg shadow-lg sticky top-0 z-50">
  <nav class="max-w-5xl mx-auto px-4 py-6">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-white hover:text-gray-200 transition-colors">
        {{ site.title }}
      </a>
      <ul class="flex space-x-6">
        {% for item in site.navigation %}
        <li>
          <a href="{{ item.url }}" class="text-white hover:text-gray-200 transition-colors font-medium">
            {{ item.title }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </nav>
</header>

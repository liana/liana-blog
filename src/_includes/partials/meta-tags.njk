<!-- Open Graph -->
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}">
<meta property="og:description" content="{% if description %}{{ description }}{% elif excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
<meta property="og:type" content="{% if layout == 'layouts/post.njk' %}article{% else %}website{% endif %}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
{% if featured_image %}
<meta property="og:image" content="{{ site.url }}{{ featured_image }}">
<meta property="og:image:alt" content="{{ title }}">
{% endif %}
{% if date %}
<meta property="article:published_time" content="{{ date | dateToRfc3339 }}">
{% endif %}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}">
<meta name="twitter:description" content="{% if description %}{{ description }}{% elif excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">
{% if featured_image %}
<meta name="twitter:image" content="{{ site.url }}{{ featured_image }}">
<meta name="twitter:image:alt" content="{{ title }}">
{% endif %}

<!-- RSS Feed -->
<link rel="alternate" type="application/atom+xml" title="{{ site.title }}" href="{{ site.url }}/feed.xml">

<!-- Canonical URL -->
<link rel="canonical" href="{{ site.url }}{{ page.url }}">
